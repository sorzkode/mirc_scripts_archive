#dns1 on
on 1:DNS: {
  if ($nick == $null) { set %name $naddress } | if ($nick != $null) { set %name $nick } | if ($naddress == $null) { set %naddress [unavalible] }
  echo 6 -s Finding Address for: 2 $+ %name $+   
  if ($naddress != $null) { set %naddress $naddress } 
  echo 6 -s Named Address for %name $+ : 2 $+ %naddress $+ 
  if ($iaddress == $null) { set %iaddress [unavalible] } 
  if ($iaddress != $null) { set %iaddress $iaddress } 
  echo 6 -s IP for %naddress is: 2 %iaddress  
  unset %name %iaddress %naddress
  halt
}
#dns1 end
