#mDCC off
on 1:notice:mDCC get *:?: {
  set %what $remove($3,$chr(35))
  if ($token(%what,32,%mdcc.packs) != $null) { .notice $nick Sending you pack $chr(35) $+ $remove($3,$chr(35))  ( $+ $token(%what,32,%mdcc.packs) $+ ) | .dcc send $nick $token(%what,32,%mdcc.packs) | .ignore -nu15 *!*@ $+ $site | unset %what | halt }
  if ($token(%what,32,%mdcc.packs) == $null) { .notice $nick No such pack! | .ignore -nu15 *!*@ $+ $site | halt }
  halt
}
on 1:notice:mDCC desc *:?: {
  set %what $remove($3,$chr(35))
  if ($token(%what,46,%mdcc.description) != $null) { .notice $nick Description of packet $chr(35) $+ $remove($3,$chr(35)) $+ : $token(%what,46,%mdcc.description) | .ignore -nu15 *!*@ $+ $site | halt }
  if ($token(%what,46,%mdcc.description) == $null) { .notice $nick No description avalible! | .ignore -nu15 *!*@ $+ $site | halt }
  halt
} 
#mDCC end
