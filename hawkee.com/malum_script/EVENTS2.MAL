  if ($window(1) != @Stuff@) { window -an @Stuff@ 200 500 800 312 stuff.pop News Gothic | goto startall } | :startall
  if ($3 iswm $address($me,6)) { .timer 1 5 /splay $mircdirpage.wav | .timer 1 10 /splay $mircdirgotmail.wav | echo 1 -a 9,1You're getting g-lined! ( $+ $3 $+ ) | halt }
  else { echo @Stuff@ 2 $+ $u((+GLINE)) Gline activated for $3 $+ ! ( $+ $5- $+ ) | goto end 
  } | else goto end | :end | halt
}
