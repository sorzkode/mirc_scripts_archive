#idleback on
on 1:INPUT: {
  if ($active == @Hangman) { hangman.guesslet $1- | halt } 
  if ($active == @Help) { /echo 4 -a *** Talking to windows again? | halt } 
  if (%idlewhat == on) { /.timer456 0 400 /idle | .timer49 off | away | unset %idlewhat | ame says that Auto Away is now OFF! | goto aynd }
  :aynd
  if (%loginput == on) { .write $mircdirinput.log $timestamp $1- | if ($left(1,$1-) == /) { $1- | halt } | else { say $1- | halt } }
  else { goto endwell }
  :endwell
}
#idleback end
on 1:UNOTIFY:/set %first $readini $mircdirver.ini Notify $nick | echo 10 @Stuff@ $u((Notify)) $nick ( $+ %first $+ ) has left IRC! | remini $mircdirver.ini Notify $nick | halt 
on 1:NOTIFY:/raw -q userhost $nick | halt
#nickhold off
on 1:INPUT: {
  if ($nhold($remove($1,:)) != $null) && ($left(1,$1-) != /) { set %replace $left($remove($1,:),1,1) | set %final $replace($nhold($remove($1,:)),%replace,$c(4,%replace)) | set %final2 $remove(%final,:) | say ( $+ %final2 $+ ) $+ : $2- | unset %final %final2 %replace | halt }
}
#nickhold end
;This isn't for mIRC 5.0 but I didn't have enough space in events.ini to fit this in there...!
#vote off
on 1:NOTICE:vote*:?: {
  if ($2 == YES) && ($3- == $null) { .notice $nick Thanks for voting $bold(YES) on: $c(12,%vote.topic) | .guser 93 $nick 2 | /inc %vote.yes | /set %vote.what. [ $+ [ $site ] ] Yes }
  if ($2 == NO) && ($3- == $null) { .notice $nick Thanks for voting $bold(NO) on: $c(12,%vote.topic) | .guser 93 $nick 2  | /inc %vote.no | /set %vote.what. [ $+ [ $site ] ] No }
  if ($2 == MAYBE) && ($3- == $null) { .notice $nick Thanks for voting $bold(MAYBE) on: $c(12,%vote.topic) | .guser 93 $nick 2 | /inc %vote.maybe | set %vote.what. [ $+ [ $site ] ] Maybe }
}
on +93:NOTICE:vote*:?:/.notice $nick You already voted -=+ $+ %vote.what. [ $+ [ $site ] ] $+ +=- | /.ignore -nu10 $nick 2
#vote end
