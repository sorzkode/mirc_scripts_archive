  aline @Settings $chr(0160)
  aline @Settings Auto check for IRCops on connect --> %aircops
  aline @Settings $chr(0160)
  aline @Settings Update IAL on join --> %uial
  aline @Settings $chr(0160)
  aline @Settings Filter joins/parts with swear words in them --> %filt
  aline @Settings $chr(0160)
  aline @Settings CTCP sensetivity --> %cnum
  aline @Settings $chr(0160)
